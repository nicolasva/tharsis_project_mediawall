<%= t("statistics.colonne_table") %> : <%= @table.name %> <%= link_to t("statistics.retour_table"), :controller=>"statistics", :action=>"menu" %>
<% form_for :edit_colonne_table, :url=>{:controller=>"statistics", :action=>"valid_edit_colonne_table"} do |f| %>
<table class='tab_class_user' cellpadding='0' cellspacing='0'>
	<tr class='colonne_titre'>
		<td class='colonne_general_user'><%= t("statistics.nom_colonne") %></td>
		<td class='colonne_general'><%= t("statistics.info_colonne") %></td>
		<td class='colonne_general'><%= t("statistics.info_colonne_english") %></td>
		<td class='colonne_general'><%= t("statistics.affichage_colonne_menu") %></td>
		<td class='colonne_general'><%= t("statistics.choix_axe_x") %></td>
		<td class='colonne_general'><%= t("statistics.time_column") %></td>
		<td class='colonne_general'>Column du serial de l'application</td>
		<td class='colonne_general'><%= t("general.sup") %></td>
	</tr>
<% @colonnes.each{ |colonne| %>
	<%= hidden_field_tag("edit_colonne_table[id][]", colonne.id) %>
	<tr class='class_contenu_colonne_user'>
		<td class='contenu_colonne_user'>
			<%= colonne.name %>
		</td>

		<td class='contenu_colonne_general'>
			<%= text_field_tag("edit_colonne_table[affichagecolonne][]", colonne.affichagecolonne) %>
		</td>

		<td class='contenu_colonne_general'>
			<%= text_field_tag("edit_colonne_table[affichagecolonneen][]", colonne.affichagecolonneen) %>
		</td>

		<td class='contenu_colonne_general'>
			<%= check_box_tag("edit_colonne_table[choixaffichage][]", colonne.id, colonne.choixaffichage) %>	
		</td>

		<td class='contenu_colonne_general'>
			<%= radio_button_tag("edit_colonne_table[statx][]", colonne.id, colonne.statx) %>
		</td>

		<td class='contenu_colonne_general'>
			<%= radio_button_tag("edit_colonne_table[time_column][]", colonne.id, colonne.time_column) %>
		</td>

		<td class='contenu_colonne_general'>
			<%= radio_button_tag("edit_colonne_table[apps_serial_column][]", colonne.id, colonne.apps_serial_column) %>
		</td>
	
		<td class='contenu_colonne_general'>
			<%= link_to image_tag("img_general/close.gif", :style=>"border:0px;"), {:controller=>"statistics", :action=>"sup_colonnetable", :id=>colonne.id}, :confirm=>"Etes-vous sÃ»r ?", :method=>:delete %>
		</td>
	</tr>
<% } %>
</table>
	<p>
		<%= f.submit t("general.submit") %>
	</p>
<% end %>

<ul class='ul_class_dock_menu'>
	<li>
		<%= link_to image_tag("img_general/applications/style_1/admin_tableau.png", :style=>"border:0px;", :size=>"50x50"), :controller=>"statistics", :action=>"menu" %> 
	</li>

</ul>

